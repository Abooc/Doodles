<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Theme" parent="style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Style.ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="Style.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/actionBar_background</item>
    </style>

    <style name="App.V7.Theme" parent="style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/V7.Style.ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="V7.Style.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/actionBar_background</item>
    </style>

    <!-- ActionBar styles -->
    <style name="Theme.OverlayActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/actionBar_background</item>
    </style>


    <style name="Theme.Custom.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@drawable/ab_solid_shadow_holo</item>
        <item name="colorPrimary">#ff00bcd4</item>
        <item name="colorPrimaryDark">#FF00838F</item>
        <item name="colorAccent">#ffff00</item>
    </style>

</resources>