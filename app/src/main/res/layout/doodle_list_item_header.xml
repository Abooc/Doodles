<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/WHITE">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/HeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/ArchiveDoodles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_menu_find"
                    android:drawablePadding="6dp"
                    android:padding="8dp"
                    android:text="涂鸦存档"
                    android:textColor="@color/GRAY_DARK" />

                <TextView
                    android:id="@+id/AdView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_menu_sort_by_size"
                    android:drawablePadding="6dp"
                    android:padding="8dp"
                    android:text="推荐广告"
                    android:textColor="@color/GRAY_DARK" />
        </LinearLayout>

        <include layout="@layout/line_h_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@android:drawable/ic_menu_search"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="收藏"
                android:textColor="@color/GRAY_DARK"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@android:drawable/ic_menu_share"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="分享"
                android:textColor="@color/GRAY_DARK" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>