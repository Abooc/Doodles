<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="#fff">

    <include layout="@layout/fragment_navigation_drawer_account" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <org.lee.android.doodles.widget.CustomListView
                android:id="@+id/ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:choiceMode="singleChoice"
                android:listSelector="@drawable/default_item_selector"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />

            <TextView
                android:id="@+id/Commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_section4"
                android:textColor="@color/color_clickable_black_gray_white"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/default_item_selector" />

            <TextView
                android:id="@+id/AboutDoodles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_section5"
                android:textColor="@color/color_clickable_black_gray_white"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/default_item_selector" />

            <include layout="@layout/line_h_gray" />

            <TextView
                android:id="@+id/RemoveAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="移除广告"
                android:textColor="@color/color_clickable_black_gray_white"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/default_item_selector" />

            <TextView
                android:id="@+id/Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/color_clickable_black_gray_white"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/default_item_selector" />

            <include layout="@layout/line_h_gray" />

            <TextView
                android:id="@+id/Share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="将此应用告诉朋友"
                android:textColor="@color/BLACK"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/default_item_selector" />

            <TextView
                android:id="@+id/Evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="给应用打个评分"
                android:textColor="@color/BLACK"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/default_item_selector" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>