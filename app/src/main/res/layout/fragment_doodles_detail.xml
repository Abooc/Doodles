<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.SampleDashboard.Card"
    android:id="@+id/CardView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:elevation="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context=".MainActivity">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="140dp"
            android:src="@drawable/ic_google_birthday"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageView"
            android:text="2015春节"
            android:textColor="@color/BLACK" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:text="2015-02-19"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/BLACK" />

        <TextView
            android:id="@+id/HoverText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="电池发明人亚历山德罗·伏特诞辰 270周年"
            android:textStyle="italic"
            android:textColor="@color/GRAY_DARK"
            android:padding="4dp" />


        <TextView
            android:id="@+id/Desc"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:minHeight="100dp"
            android:layout_alignParentBottom="true"
            android:text="电池发明人亚历山德罗·伏特诞辰 270周年"
            android:textStyle="italic"
            android:textColor="@color/GRAY_DARK"
            android:padding="4dp" />


        <TextView
            android:id="@+id/Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:gravity="center_vertical"
            android:clickable="true"
            android:drawableStart="@drawable/abc_ic_go_search_api_mtrl_alpha"
            android:text="搜索更多信息"
            android:textStyle="italic"
            android:textColor="@color/color_clickable_white_gray"
            android:padding="4dp"
            android:layout_marginBottom="12dp"
            android:background="#4c8aff" />

        <include layout="@layout/line_h_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:text="收藏这副涂鸦作品"
                android:textStyle="italic"
                android:textColor="@color/color_clickable_black_gray"
                android:padding="8dp" />
        </LinearLayout>

        <include layout="@layout/line_h_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="#4c8aff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:text="Twitter"
                android:textStyle="italic"
                android:textColor="@color/color_clickable_white_gray"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:text="Facebook"
                android:textStyle="italic"
                android:textColor="@color/color_clickable_white_gray"
                android:padding="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:text="Google+"
                android:textStyle="italic"
                android:textColor="@color/color_clickable_white_gray"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>