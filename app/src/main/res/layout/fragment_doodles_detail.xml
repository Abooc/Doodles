<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/WHITE">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="160dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:scaleType="centerCrop"
            android:src="@color/GRAY_LIGHT" />
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView"
        style="@style/Widget.SampleDashboard.Card"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0.5dp">

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:shadowColor="#D0D0D0"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="6"
                android:text="标题"
                android:textColor="@color/GRAY_DARK"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="2015-02-19"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="英文原文名"
                android:textColor="@color/GRAY_DARK"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Translations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="支持语言"
                android:textColor="@color/GRAY_DARK"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/HoverText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:padding="4dp"
                android:text="简单介绍"
                android:textColor="@color/GRAY_DARK"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="12dp"
                android:background="#4c8aff"
                android:clickable="true"
                android:drawableStart="@drawable/abc_ic_go_search_api_mtrl_alpha"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="搜索更多信息"
                android:textColor="@color/color_clickable_white_gray"
                android:textStyle="italic" />

            <include layout="@layout/line_h_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="喜欢这副涂鸦作品"
                    android:textColor="@color/color_clickable_black_gray"
                    android:textStyle="italic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4c8aff"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Twitter"
                    android:textColor="@color/color_clickable_white_gray"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Facebook"
                    android:textColor="@color/color_clickable_white_gray"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Google+"
                    android:textColor="@color/color_clickable_white_gray"
                    android:textStyle="italic" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>